---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.tsx';
import { getCollection } from 'astro:content';

const posts = await getCollection('writing', ({ data }) => {
  return data.draft !== true;
});

// Sort posts by published date (newest first)
const sortedPosts = posts.sort((a, b) =>
  new Date(b.data.publishedDate).getTime() - new Date(a.data.publishedDate).getTime()
);
---

<Layout title="Writing - Luke Autry">
  <Header currentPath="/writing" client:load />

  <main class="min-h-screen px-6 lg:px-12 py-12">
    <div class="max-w-4xl mx-auto">
      <div class="space-y-8">
        <h1 class="text-4xl lg:text-5xl font-bold">Writing</h1>

        {sortedPosts.length > 0 ? (
          <div class="space-y-8">
            {sortedPosts.map((post) => (
              <article class="bg-gradient-to-br from-dark-800/50 to-dark-900/50 backdrop-blur-sm border border-dark-700/50 rounded-lg p-6 hover:border-primary-500/50 transition-colors">
                <div class="space-y-4">
                  <div class="flex items-center justify-between">
                    <time class="text-sm text-gray-400">
                      {new Date(post.data.publishedDate).toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </time>
                    {post.data.tags && post.data.tags.length > 0 && (
                      <div class="flex gap-2">
                        {post.data.tags.map((tag) => (
                          <span class="px-2 py-1 text-xs bg-primary-500/20 text-primary-400 rounded-md">
                            {tag}
                          </span>
                        ))}
                      </div>
                    )}
                  </div>

                  <h2 class="text-2xl font-bold text-white">
                    <a
                      href={`/writing/${post.slug}`}
                      class="hover:text-primary-400 transition-colors"
                    >
                      {post.data.title}
                    </a>
                  </h2>

                  <p class="text-gray-300 leading-relaxed">
                    {post.data.description}
                  </p>

                  <div class="pt-2">
                    <a
                      href={`/writing/${post.slug}`}
                      class="text-primary-400 hover:text-primary-500 transition-colors font-medium"
                    >
                      Read more â†’
                    </a>
                  </div>
                </div>
              </article>
            ))}
          </div>
        ) : (
          <div class="prose prose-lg prose-invert max-w-none">
            <p class="text-xl text-gray-300 leading-relaxed">
              No posts yet. Check back soon!
            </p>
          </div>
        )}
      </div>
    </div>
  </main>
</Layout>